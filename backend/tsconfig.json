{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",  // Compilados se guardarán en ./dist
    "rootDir": "./src",  // Directorio raíz de los archivos fuente
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"  // Asegura que todos los archivos .ts en src sean incluidos
  ],
  "exclude": [
    "node_modules"
  ]
}
